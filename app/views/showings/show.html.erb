<div class="page-header">
  <h3>Showing #<%= @showing.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @showing.user.present? %>
          <a href="/users/<%= @showing.user_id %>">
            <%= @showing.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Listing</dt>
      <dd>
        <% if @showing.listing.present? %>
          <a href="/listings/<%= @showing.listing_id %>">
            <%= @showing.listing.address %>
          </a>
        <% end %>
      </dd>

      <dt>Message</dt>
      <dd><%= @showing.message %></dd>

      <dt>Date</dt>
      <dd><%= @showing.date %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/showings" class="btn btn-primary">
        Back
      </a>
      <a href="/showings/<%= @showing.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_showing/<%= @showing.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

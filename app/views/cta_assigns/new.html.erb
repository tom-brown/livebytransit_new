<!-- Validation failure messages -->
<% if @cta_assign.errors.any? %>
  <% @cta_assign.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Cta Assign</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_cta_assign" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for cta_station_id -->
      <div class="form-group">
        <label for="cta_station_id" class="control-label">
          Cta station
        </label>

        <input type="text" id="cta_station_id" name="cta_station_id" placeholder="Cta station" class="form-control" value="<%= @cta_assign.cta_station_id %>">
      </div>

      <!-- Label and input for cta_line_id -->
      <div class="form-group">
        <label for="cta_line_id" class="control-label">
          Cta line
        </label>

        <input type="text" id="cta_line_id" name="cta_line_id" placeholder="Cta line" class="form-control" value="<%= @cta_assign.cta_line_id %>">
      </div>

      <button class="btn btn-success">
        Create Cta Assign
      </button>
      or
      <a href="/cta_assigns">Cancel</a>
    </form>
  </div>
</div>

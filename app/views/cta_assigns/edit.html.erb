<!-- Validation failure messages -->
<% if @cta_assign.errors.any? %>
  <% @cta_assign.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Cta Assign #<%= @cta_assign.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_cta_assign/<%= @cta_assign.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for cta_station_id -->
      <div class="form-group">
        <label for="cta_station_id" class="control-label">
          Cta station
        </label>

        <%= select_tag(:cta_station_id, options_from_collection_for_select(CtaStation.all, :id, :name, @cta_assign.cta_station_id), :class => "form-control") %>
      </div>

      <!-- Label and input for cta_line_id -->
      <div class="form-group">
        <label for="cta_line_id" class="control-label">
          Cta line
        </label>

        <%= select_tag(:cta_line_id, options_from_collection_for_select(CtaLine.all, :id, :name, @cta_assign.cta_line_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Cta Assign
      </button>
      or
      <a href="/cta_assigns/<%= @cta_assign.id %>">Cancel</a>
    </form>
  </div>
</div>

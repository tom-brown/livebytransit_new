<div class="page-header">
  <h1>
    Hood points
    <a href="/hood_points/new" class="btn btn-lg btn-success">New Hood point</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Neighborhood</th>
        <th>Lat</th>
        <th>Lng</th>
        <th>Actions</th>
      </tr>

      <% @hood_points.each do |hood_point| %>
      <tr>
        <td>
          <% if hood_point.neighborhood.present? %>
            <a href="/neighborhoods/<%= hood_point.neighborhood.id %>">
              <%= hood_point.neighborhood.name %>
            </a>
          <% end %>
        </td>
        <td><%= hood_point.lat %></td>
        <td><%= hood_point.lng %></td>
        <td>
          <a href="/hood_points/<%= hood_point.id %>" class="btn btn-primary">Show</a>
          <a href="/hood_points/<%= hood_point.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_hood_point/<%= hood_point.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @hood_points, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

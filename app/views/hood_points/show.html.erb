<div class="page-header">
  <h3>Hood Point #<%= @hood_point.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Neighborhood</dt>
      <dd>
        <% if @hood_point.neighborhood.present? %>
          <a href="/neighborhoods/<%= @hood_point.neighborhood_id %>">
            <%= @hood_point.neighborhood.name %>
          </a>
        <% end %>
      </dd>

      <dt>Lat</dt>
      <dd><%= @hood_point.lat %></dd>

      <dt>Lng</dt>
      <dd><%= @hood_point.lng %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/hood_points" class="btn btn-primary">
        Back
      </a>
      <a href="/hood_points/<%= @hood_point.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_hood_point/<%= @hood_point.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

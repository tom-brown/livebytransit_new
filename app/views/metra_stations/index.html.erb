<div class="page-header">
  <h1>
    Metra stations
    <a href="/metra_stations/new" class="btn btn-lg btn-success">New Metra station</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Lat</th>
        <th>Lng</th>
        <th>Actions</th>
      </tr>

      <% @metra_stations.each do |metra_station| %>
      <tr>
        <td><%= metra_station.lat %></td>
        <td><%= metra_station.lng %></td>
        <td>
          <a href="/metra_stations/<%= metra_station.id %>" class="btn btn-primary">Show</a>
          <a href="/metra_stations/<%= metra_station.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_metra_station/<%= metra_station.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @metra_stations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

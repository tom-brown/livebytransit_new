<div class="page-header">
  <h1>
    Metra searches
    <a href="/metra_searches/new" class="btn btn-lg btn-success">New Metra search</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Search</th>
        <th>Metra station</th>
        <th>Actions</th>
      </tr>

      <% @metra_searches.each do |metra_search| %>
      <tr>
        <td>
          <% if metra_search.search.present? %>
            <a href="/searches/<%= metra_search.search.id %>">
              <%= metra_search.search.user_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if metra_search.metra_station.present? %>
            <a href="/metra_stations/<%= metra_search.metra_station.id %>">
              <%= metra_search.metra_station.lat %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/metra_searches/<%= metra_search.id %>" class="btn btn-primary">Show</a>
          <a href="/metra_searches/<%= metra_search.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_metra_search/<%= metra_search.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @metra_searches, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<div class="page-header">
  <h3>Hood Search #<%= @hood_search.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Neighborhood</dt>
      <dd>
        <% if @hood_search.neighborhood.present? %>
          <a href="/neighborhoods/<%= @hood_search.neighborhood_id %>">
            <%= @hood_search.neighborhood.name %>
          </a>
        <% end %>
      </dd>

      <dt>Search</dt>
      <dd>
        <% if @hood_search.search.present? %>
          <a href="/searches/<%= @hood_search.search_id %>">
            <%= @hood_search.search.user_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/hood_searches" class="btn btn-primary">
        Back
      </a>
      <a href="/hood_searches/<%= @hood_search.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_hood_search/<%= @hood_search.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- Validation failure messages -->
<% if @cta_search.errors.any? %>
  <% @cta_search.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Cta Search #<%= @cta_search.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_cta_search/<%= @cta_search.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for search_id -->
      <div class="form-group">
        <label for="search_id" class="control-label">
          Search
        </label>

        <%= select_tag(:search_id, options_from_collection_for_select(Search.all, :id, :user_id, @cta_search.search_id), :class => "form-control") %>
      </div>

      <!-- Label and input for cta_station_id -->
      <div class="form-group">
        <label for="cta_station_id" class="control-label">
          Cta station
        </label>

        <%= select_tag(:cta_station_id, options_from_collection_for_select(CtaStation.all, :id, :name, @cta_search.cta_station_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Cta Search
      </button>
      or
      <a href="/cta_searches/<%= @cta_search.id %>">Cancel</a>
    </form>
  </div>
</div>

<div class="page-header">
  <h1>
    City searches
    <a href="/city_searches/new" class="btn btn-lg btn-success">New City search</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Search</th>
        <th>City</th>
        <th>Actions</th>
      </tr>

      <% @city_searches.each do |city_search| %>
      <tr>
        <td>
          <% if city_search.search.present? %>
            <a href="/searches/<%= city_search.search.id %>">
              <%= city_search.search.user_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if city_search.city.present? %>
            <a href="/cities/<%= city_search.city.id %>">
              <%= city_search.city.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/city_searches/<%= city_search.id %>" class="btn btn-primary">Show</a>
          <a href="/city_searches/<%= city_search.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_city_search/<%= city_search.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @city_searches, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<!-- Validation failure messages -->
<% if @listings_search.errors.any? %>
  <% @listings_search.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Listings Search</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_listings_search" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for listing_id -->
      <div class="form-group">
        <label for="listing_id" class="control-label">
          Listing
        </label>

        <input type="text" id="listing_id" name="listing_id" placeholder="Listing" class="form-control" value="<%= @listings_search.listing_id %>">
      </div>

      <!-- Label and input for search_id -->
      <div class="form-group">
        <label for="search_id" class="control-label">
          Search
        </label>

        <input type="text" id="search_id" name="search_id" placeholder="Search" class="form-control" value="<%= @listings_search.search_id %>">
      </div>

      <button class="btn btn-success">
        Create Listings Search
      </button>
      or
      <a href="/listings_searches">Cancel</a>
    </form>
  </div>
</div>
